{
  "name": "progress-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev -w server",
    "client": "npm run dev -w client",
    "install:all": "npm install",
    "build": "npm run build -w client",
    "start": "npm run build && cross-env NODE_ENV=production npm run start -w server"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^10.1.0",
    "node-cron": "^4.2.1"
  }
}
